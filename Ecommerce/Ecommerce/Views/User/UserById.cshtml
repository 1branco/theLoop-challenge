@using Ecommerce.ViewModels;
@model UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="text-center">
    <h1 class="display-4">User details listing</h1>
</div>

<div class="container">
    <h3 class="p-3 text-center">User's details</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.Username)</th>
                <th>@Html.DisplayNameFor(Model => Model.Name)</th>
                <th>@Html.DisplayNameFor(Model => Model.Email)</th>
                <th>@Html.DisplayNameFor(Model => Model.Phone)</th>
                <th>@Html.DisplayNameFor(Model => Model.Address)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Username</td>
                <td>@Model.Name.FirstName @Model.Name.LastName</td>
                <td>@Model.Email</td>
                <td>@Model.Phone</td>
                <td>
                    @Model.Address.Street No. @Model.Address.Number,
                    @Model.Address.City, @Model.Address.Zipcode
                </td>
            </tr>
            
        </tbody>
    </table>
</div>
