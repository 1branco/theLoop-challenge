@using Ecommerce.ViewModels;
@model IList<CartViewModel>

@{
    ViewData["Title"] = "Cart Listing";
}

<div class="text-center">
    <h1 class="display-4">Cart listing</h1>
</div>

<div class="container">
    <h3 class="p-3 text-center">Cart from <a href="https://fakestoreapi.com/">fakestoreapi.com</a></h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Date</th>
                <th>Products</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.UserId</td>
                    <td>@product.Date</td>
                    @foreach(var item in product.Products)
                    {                       
                        <td>@item.ProductId</td>
                        <td>@item.Quantity</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
